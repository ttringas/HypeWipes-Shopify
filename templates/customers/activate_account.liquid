{% layout settings.customer_layout %}

	<div class="hgroup">
    	<h2>Activate Account</h2>	
	</div>
	<p>Create your password to activate your account</p>

<div class="login_form">
  {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <p>
      <label for="password">Password</label><br/>
      <input type="password" value="" name="customer[password]" id="customer_password" class="input" size="30" />
    </p>
    <p>
      <label for="password_confirmation">Password Confirmation</label><br/>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="input" size="30" />
    </p>
    <p class="action_bottom">
      <input class="b_rect" type="submit" value="Activate Account" />
      <span class="note">or</span>
      <input type="submit" class="b_rect" name="decline" id="customer_decline" value="Decline Invitation" />
    </p>
  {% endform %}
</div>