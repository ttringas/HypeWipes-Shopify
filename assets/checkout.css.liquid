

#logo { 
  height: 60px; /* Replace with height of your logo file */
  background: url({{ 'logo.png' | asset_url }}) 50% 50% no-repeat;
}

/* Center-align the subtitle */
#tagline {
  text-align: center;

}
#tagline .subtitle {
	color: {{ settings.title_color }};	
}

/* Hide the name of the store because we got this nifty logo now */
#tagline .title {
  display: none;
}


html body {
	background: {{ settings.bg_color }};
	{% if settings.bg_image != 'none' %}
	background-image: url( "{{ settings.bg_image | asset_url }}" );
	background-repeat: {{ settings.bg_repeat }};
	background-position: {{ settings.bg_position }};
	background-attachment: {{ settings.bg_attachment }};
	background-color: {{ settings.bg_color }};
	{% endif %}
	
	
	font-family: {{ settings.text_font }};
	
}

#header {
	padding-top: 20px;
	padding-bottom: 20px;
	background: none;
}

#header h1 {
	font-size: 48px;
	line-height: 48px;
	color: {{ settings.title_color }};
}

#main {
	background: none;
}

#footer {
	background: none;
}

#content {
	padding-left: 0;
	padding-right: 0;
}


#container.slim #header,
#container.slim #main,
#container.slim #footer {
	background: none;
}

#overview,
#email,
#addresses,
#buttons,
.group {
	background: {{ settings.nav_bg_color }};
	border: none;
	-webkit-border-radius: 0;
	-moz-border-radius: 0;
	border-radius: 0;
	margin-left: 0;
	margin-right: 0;
}
#thumbs div {
	border: none;
}

body {
	
	color: {{ settings.text_color }};
}
.group h3, .pgroup h3,
#overview h2,
h4.active-customer {
	color: {{ settings.title_color }};
	text-shadow: none;
}
a {
	color: {{ settings.link_color }};
}
a:hover {
	color: {{ settings.link_hover }};
}
h3 {
	color: {{ settings.title_color }};	
	text-shadow: none;
}

#thumbs span,
#thumbs h3 span {
	color: {{ settings.text_accent_color }};	
}
#products {
	border: none;
}
@font-face {
    font-family: 'BebasNeueRegular';
    src: url( "{{ 'BebasNeue-webfont.eot' | asset_url }}" );
    src: url( "{{ 'BebasNeue-webfont.eot?#iefix' | asset_url }}" ) format('embedded-opentype'),
         url( "{{ 'BebasNeue-webfont.woff' | asset_url }}" ) format('woff'),
         url( "{{ 'BebasNeue-webfont.ttf' | asset_url }}" ) format('truetype'),
         url( "{{ 'BebasNeue-webfont.svg#BebasNeueRegular' | asset_url }}" ) format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'OstrichSansBlack';
    src: url( "{{ 'ostrich-black-webfont.eot' | asset_url }}" );
    src: url( "{{ 'ostrich-black-webfont.eot?#iefix' | asset_url }}" ) format('embedded-opentype'),
         url( "{{ 'ostrich-black-webfont.woff' | asset_url }}" ) format('woff'),
         url( "{{ 'ostrich-black-webfont.ttf' | asset_url }}" ) format('truetype'),
         url( "{{ 'ostrich-black-webfont.svg#OstrichSansBlack' | asset_url }}" ) format('svg');
    font-weight: normal;
    font-style: normal;

}
#overview .hint {
	color: {{ settings.text_accent_color }};
}
#cost, #order-num {
	font-family: 'BebasNeueRegular', Helvetica, Arial, sans-serif;
	text-shadow: none;
	color: {{ settings.text_accent_color }};
}
#steps {
	font-family: 'BebasNeueRegular', Helvetica, Arial, sans-serif;
	font-style: normal;
}


#buttons #commit-button,
#buttons #complete-purchase {
	background: {{ settings.text_accent_color }};
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
	font-size: 18px;
	line-height: 16px;
	font-family: {{ settings.rectangle_font }};
	color: {{ settings.text_over_accent }};
	padding: 14px 9px 10px 10px;
	letter-spacing: 1px;
	font-weight: normal;
	border: none;
	text-rendering: optimizeLegibility;
  	-webkit-font-smoothing: antialiased; 
	margin-right: 10px;
}
#buttons #commit-button:hover,
#buttons #complete-purchase:hover {
	color: {{ settings.text_over_accent }};
	background: {{ settings.accent_hover }};
}